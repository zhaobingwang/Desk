<Window x:Class="Desk.Gist.WPF.GraphicsAndMultimedia.Animation.SimpleAnimationGist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desk.Gist.WPF.GraphicsAndMultimedia.Animation"
        mc:Ignorable="d"
        Title="SimpleAnimationGist" Height="450" Width="800">
    <Grid x:Name="gridMain" HorizontalAlignment="Center" Width="800" Height="400" >
        <Button Name="btnMove" Content="Move" VerticalAlignment="Top" Height="60" Click="btnMove_Click" Margin="650,10,0,0" HorizontalAlignment="Left" Width="120"/>
        <Ellipse x:Name="ellipse" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="100">
            <Ellipse.RenderTransform>
                <TranslateTransform x:Name="tt" X="0" Y="0"/>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
</Window>
