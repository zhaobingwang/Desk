@page
@using Desk.Gist.ABPDemo.Localization
@using Desk.Gist.ABPDemo.Web.Pages.Books
@using Desk.Gist.ABPDemo.Permissions
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Authorization
@model IndexModel
@inject IStringLocalizer<ABPDemoResource> L
@inject IAuthorizationService AuthorizationService

@section scripts
{
    <abp-script src="/Pages/Books/Index.js"></abp-script>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>>@L["Books"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                @if (await AuthorizationService.IsGrantedAsync(ABPDemoPermissions.Books.Create))
                {
                    <abp-button id="NewBookButton" text="@L["NewBook"].Value" icon="plus" button-type="Primary"></abp-button>
                }

            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="BooksTable"></abp-table>
    </abp-card-body>
</abp-card>