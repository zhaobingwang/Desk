@page

@using Desk.Localization
@using Desk.Web.Pages.AssetCategories
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal

@model CreateModalModel

@inject IStringLocalizer<DeskResource> L

@{
    Layout = null;
}

<form asp-page="/AssetCategories/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewAssetCategory"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="AssetCategory.Name"></abp-input>
            <abp-select asp-for="AssetCategory.ParentId" asp-items="@Model.RootCategoryItem"></abp-select>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>